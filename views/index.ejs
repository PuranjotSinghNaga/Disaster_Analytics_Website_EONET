<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IDAP</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link href="styles/main.css" rel="stylesheet" />
  </head>
  <body>
    <header><h1>International Disaster Analytics Portal</h1></header>

    <% if (locals.current){ %> <% if ( current.data.events.length === 0){ %>
    <div class="card border-success mb-3" style="max-width: 18rem">
      <div class="card-header">Current Disasters</div>
      <div class="card-body text-success">
        <h5 class="card-title">Happily no Danger!!😁😁</h5>
      </div>
    </div>

    <% }else{ %>

    <div id="disasterCarousel" class="carousel slide">
      <div class="carousel-inner">
        <% var cardTriple = [] %> <% current.data.events.forEach(element => {%>
        <% cardTriple.push(element)%>
        <div class="carousel-item">
          <div class="card border-danger mb-3" style="max-width: 18rem">
            <div class="card-header">Current Disasters</div>
            <div class="card-body text-danger">
              <h5 class="card-title"><%= current.data.events[0].title %></h5>
              <p class="card-text">
                Desciption: <%= current.data.events[0].description %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#disasterCarousel"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#disasterCarousel"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <% }} %>

    <form action="/search" method="get">
      <select
        class="form-select"
        aria-label="Default select example"
        name="selectValue1"
        id="mainMenu"
      >
        <option selected>Search By:</option>
        <option value="location">Location</option>
        <option value="category">Event</option>
        <option value="date">Date</option>
        <option value="status">Current Status</option>
        <option value="days">Days from now</option>
      </select>

      <div id="subMenuContainer"></div>

      <button class="btn btn-primary" type="submit" value="search">
        Search
      </button>
    </form>

    <script src="scripts.js"></script>
  </body>
</html>
